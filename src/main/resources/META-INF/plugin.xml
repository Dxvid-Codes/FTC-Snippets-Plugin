    <!-- Support IntelliJ/Android Studio builds 242 through 251 -->
    <idea-version since-build="242" until-build="251.*"/>

    <!-- Keep this only if you really use Kotlin APIs -->
    <depends>com.intellij.modules.platform</depends>
    <!-- <depends>org.jetbrains.kotlin</depends> -->

    <actions>
        <!-- Editor Popup Menu group -->
        <group id="FTCImportsGroup" text="FTC Imports" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </group>

        <!-- Toolbar group -->
        <group id="FTCImportsToolbarGroup" text="FTC Imports" popup="true" icon="/icons/ftc_icon.svg">
            <add-to-group group-id="MainToolbarRight" anchor="last"/>
        </group>

        <action id="InsertMotorImports"
                class="ontalent.ftcsnippets.InsertMotorImportsAction"
                text="Motor Imports">
            <add-to-group group-id="FTCImportsGroup"/>
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>

        <action id="InsertServoImports"
                class="ontalent.ftcsnippets.InsertServoImportsAction"
                text="Servo Imports">
            <add-to-group group-id="FTCImportsGroup"/>
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>

        <action id="InsertSensorImports"
                class="ontalent.ftcsnippets.InsertSensorImportsAction"
                text="Sensor Imports">
            <add-to-group group-id="FTCImportsGroup"/>
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>

        <action id="InsertIMUImports"
                class="ontalent.ftcsnippets.InsertIMUImportsAction"
                text="IMU Imports">
            <add-to-group group-id="FTCImportsGroup"/>
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>

        <action id="InsertVisionImports"
                class="ontalent.ftcsnippets.InsertVisionImportsAction"
                text="Camera Imports (EasyOpenCV)">
            <add-to-group group-id="FTCImportsGroup"/>
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>

        <action id="InsertAllImports"
                class="ontalent.ftcsnippets.InsertAllImportsAction"
                text="All FTC Imports">
            <add-to-group group-id="FTCImportsGroup"/>
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>

        <action id="InsertTeleOpImports"
                class="ontalent.ftcsnippets.InsertTeleOpImportsAction"
                text="TeleOp Skeleton">
            <add-to-group group-id="FTCImportsGroup"/>
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>

        <action id="InsertAutonomousImports"
                class="ontalent.ftcsnippets.InsertAutonomousImportsAction"
                text="Autonomous Skeleton">
            <add-to-group group-id="FTCImportsGroup"/>
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>

        <action id="InsertHardwareMapAction"
                class="ontalent.ftcsnippets.InsertHardwareMapAction"
                text="HardwareMap Auto Insert">
            <add-to-group group-id="FTCImportsGroup"/>
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>

        <action id="FTCDocsSearchAction"
                class="ontalent.ftcsnippets.FTCDocsSearchAction"
                text="FTC Docs Search">
            <add-to-group group-id="FTCImportsToolbarGroup"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor
                language="JAVA"
                implementationClass="ontalent.ftcsnippets.FTCDocsCompletionContributor"/>
        <completion.contributor
                language="kotlin"
                implementationClass="ontalent.ftcsnippets.FTCDocsCompletionContributor"/>
    </extensions>
</idea-plugin>
